config CIFS_SERVER
	tristate "CIFS server support"
	depends on INET
	select NLS
	select CRYPTO
	select CRYPTO_MD4
	select CRYPTO_MD5
	select CRYPTO_HMAC
	select CRYPTO_ARC4
	select CRYPTO_ECB
	select CRYPTO_DES
	select CRYPTO_SHA256
	help
		This config provides support for adding Samba server inside the kernel.
	
config CIFS_SMB2_SERVER
        bool "SMB2 server support"
        depends on CIFS_SERVER && INET
        select NLS

        help
          This enables experimental support for the SMB2 (Server Message Block
          version 2) protocol.

